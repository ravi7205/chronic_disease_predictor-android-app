<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:visibility="visible"
    tools:context="team.com.HealthCareApp.LoginActivity"
    tools:visibility="visible">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="false"
        android:padding="10sp"
        android:text="        DETECTED DISEASE"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#9E4141"
        android:textSize="30sp"
        android:textStyle="italic"
        android:visibility="visible"
        tools:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="9dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/editText"
            android:layout_width="327dp"
            android:layout_height="500dp"
            android:layout_alignBottom="@id/textView2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="-543dp"
            android:duplicateParentState="false"
            android:ems="10"
            android:enabled="true"
            android:focusable="true"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:isScrollContainer="true"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical"
            android:textColor="#E9131212"
            android:textSize="18dp"
            android:textStyle="italic"
            android:visibility="visible" />

    </ScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-500dp"
        android:minHeight="50dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="20dp" >

        <TextView
            android:id="@+id/remedies"
            android:layout_width="287dp"
            android:layout_height="39dp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginBottom="500dp"
            android:clickable="true"
            android:gravity="center|center_horizontal"
            android:text="Get Remedies!"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:text="Get Remedies!" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/loginCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="center_horizontal">

    </RelativeLayout>


</RelativeLayout>

